<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.fishall">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fish_and_all_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fish_and_all_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FishDetail"
            android:label="@string/title_activity_fish_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FishEncyclopedia"
            android:label="@string/title_activity_fish_encyclopedia"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".GPS_Service" />

        <activity android:name=".AboutActivitiy"></activity>
    </application>

</manifest>